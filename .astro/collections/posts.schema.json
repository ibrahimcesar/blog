{
  "$ref": "#/definitions/posts",
  "definitions": {
    "posts": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "pubDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "featured": {
          "type": "boolean",
          "default": false
        },
        "draft": {
          "type": "boolean",
          "default": false
        },
        "language": {
          "type": "string",
          "enum": [
            "en",
            "pt-br"
          ],
          "default": "pt-br"
        },
        "image": {
          "type": "string"
        },
        "socialImage": {
          "type": "string"
        },
        "tags": {
          "anyOf": [
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            {
              "type": "string"
            }
          ],
          "default": []
        },
        "category": {
          "type": "string"
        },
        "author": {
          "type": "string",
          "default": "Ibrahim Cesar"
        },
        "updated": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "string",
              "format": "date"
            },
            {
              "type": "integer",
              "format": "unix-time"
            }
          ]
        },
        "excerpt": {
          "type": "string"
        },
        "canonicalURL": {
          "type": "string",
          "format": "uri"
        },
        "series": {
          "type": "string"
        },
        "seriesOrder": {
          "type": "integer",
          "exclusiveMinimum": 0
        },
        "relatedPosts": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "tableOfContents": {
          "type": "boolean",
          "default": true
        },
        "showComments": {
          "type": "boolean",
          "default": true
        },
        "discussionUrl": {
          "type": "string",
          "format": "uri"
        },
        "tldr": {
          "type": "string"
        },
        "$schema": {
          "type": "string"
        }
      },
      "required": [
        "title",
        "description",
        "pubDate"
      ],
      "additionalProperties": false
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}