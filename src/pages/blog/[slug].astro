---
import { SITE } from "~/config.mjs";
import { getPosts, getPostsBySeries, getRelatedPosts } from "~/utils/getPostsCollection";
import { findImage } from "~/utils/findImage";
import { getTableOfContents } from "~/utils/getTableOfContents";
import { render } from 'astro:content';

import Layout from "~/layouts/PageLayout.astro";
import BlogPost from "~/components/widgets/BlogPost.astro";

export async function getStaticPaths() {
  const posts = await getPosts();

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);

// Get table of contents if enabled for this post
const toc = post.data.tableOfContents !== false
  ? await getTableOfContents(post)
  : [];

// Get series posts if this post is part of a series
const seriesPosts = post.data.series
  ? await getPostsBySeries(post.data.series)
  : [];

// Get related posts (limit to 3)
const relatedPosts = await getRelatedPosts(post, 3);

const title = `${post.data.title} â€” ${SITE.name}`;
const lang = post.data.language ? "en" : null;
const description = post.data.description;
const canonical = new URL(`blog/${post.slug}`, Astro.site);
const featureImage = post.data.socialImage ? new URL(`${post.data.socialImage}`, Astro.site) : null;

const image = await findImage(post.data.image);
---

<Layout
  meta={{
    title,
    description,
    canonical,
    image,
    lang,
    featureImage
  }}
>
  <main>
    <BlogPost post={post} image={image} toc={toc} seriesPosts={seriesPosts} relatedPosts={relatedPosts}>
      <Content />
    </BlogPost>
  </main>
</Layout>
