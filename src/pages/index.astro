---
import Layout from "~/layouts/PageLayout.astro";

import { SITE } from "~/config.mjs";

import HighlightedPosts from "~/components/widgets/HighlightedPosts.astro";
import SchemaOrg from "~/components/core/SchemaOrg.astro";

const title = `${SITE.name} — Solutions Architect`;
const description =
  "@ibrahimcesar — Builder, eventually consistent. Personal blog with posts The Cloud, Code and Everything Else!";
const canonical = new URL("", Astro.site);
---

<Layout meta={{ title, description, canonical }}>
  <SchemaOrg type="WebSite" />
  <main>
    <HighlightedPosts />
  </main>
</Layout>
