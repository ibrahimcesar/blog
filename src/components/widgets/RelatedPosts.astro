---
import type { Post } from "~/utils/getPostsCollection";
import Tags from "~/components/widgets/Tags.astro";

interface Props {
  posts: Post[];
  currentPost: Post;
}

const { posts, currentPost } = Astro.props;

// Don't render if no related posts
if (!posts || posts.length === 0) {
  return null;
}

const isEnglish = currentPost.data.language === "en";
---

<aside class="related-posts not-prose font-sans" aria-label="Related Posts">
  <h2 class="related-title">
    {isEnglish ? "Related Articles" : "Artigos Relacionados"}
  </h2>

  <ul class="related-list">
    {posts.map((post) => {
      const postIsEnglish = post.data.language === "en";
      return (
        <li class="related-item">
          <a href={`/blog/${post.slug}`} class="related-link">
            {post.data.title}
          </a>
          <div class="related-meta">
            <span class={`lang-tag ${postIsEnglish ? 'lang-en' : 'lang-pt'}`}>
              {postIsEnglish ? "en" : "pt-br"}
            </span>
            {post.data.tags && post.data.tags.length > 0 && (
              <Tags tags={post.data.tags.slice(0, 3)} size="xs" />
            )}
          </div>
        </li>
      );
    })}
  </ul>
</aside>

<style>
  .related-posts {
    margin: 3rem 0 2rem;
    padding: 1.5rem 2rem;
    background: #f8fafc;
    border-radius: 8px;
    border-left: 4px solid #6366f1;
  }

  :global(.dark) .related-posts {
    background: #1e293b;
    border-left-color: #818cf8;
  }

  .related-title {
    font-size: 1rem;
    font-weight: 600;
    color: #64748b;
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  :global(.dark) .related-title {
    color: #94a3b8;
  }

  .related-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .related-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .related-link {
    color: #0f172a !important;
    text-decoration: none !important;
    font-weight: 600;
    font-size: 1.1rem;
    transition: color 0.2s ease;
    display: block;
  }

  :global(.dark) .related-link {
    color: #e2e8f0 !important;
  }

  .related-link:hover {
    color: #7c3aed !important;
  }

  :global(.dark) .related-link:hover {
    color: #a78bfa !important;
  }

  .related-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
  }

  .lang-tag {
    display: inline-flex;
    align-items: center;
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.125rem 0.5rem;
    border-radius: 0.375rem;
  }

  .lang-en {
    background-color: #2563eb;
    color: white;
  }

  .lang-pt {
    background-color: #16a34a;
    color: #fde047;
  }

  :global(.dark) .lang-en {
    background-color: #3b82f6;
  }

  :global(.dark) .lang-pt {
    background-color: #15803d;
    color: #facc15;
  }

  @media (max-width: 640px) {
    .related-posts {
      margin: 2rem -1rem 1rem;
      border-radius: 0;
      border-left: none;
      border-top: 4px solid #6366f1;
    }

    :global(.dark) .related-posts {
      border-top-color: #818cf8;
    }
  }
</style>
