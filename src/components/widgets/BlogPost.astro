---
const { post } = Astro.props;
const isEnglish = post.language ? "en" : null;
const classLanguage = isEnglish ? "en" : "br";
---

<section class="py-8 sm:py-16 lg:py-20 mx-auto post">
  <article>
    <header>
      <p class="max-w-3xl mx-auto text-center">
         <span class={`font-mono block text-sm font-semibold uppercase ${classLanguage}`}>📝 {isEnglish ? "en" : "pt-br"}</span>
        <time datetime={post.pubDate} class="text-md font-mono">
          {new Date(post.pubDate).toISOString().substring(0, 10)}
        </time> ~ {Math.ceil(post.readingTime)} min
      </p>
      <h1
        class="px-4 sm:px-6 max-w-3xl mx-auto text-center text-5xl md:text-[3.50rem] font-bold leading-tighter tracking-tighter mb-6 md:mb-8 post-title-color"
      >
        {post.title}
      </h1>
    </header>
    <div
      class="container mx-auto px-4 sm:px-6 max-w-3xl prose prose-lg lg:prose-xl dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg mt-8 font-serif"
    >
      <Fragment set:html={post.body} />
    </div>
  </article>
</section>
