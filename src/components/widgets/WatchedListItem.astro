---
import Tags from './Tags.astro';
import type { Watched } from '~/utils/getWatchedCollection';

interface Props {
  item: Watched;
}

const { item } = Astro.props;
const { title, videoId, channel, duration, pubDate, tags, description } = item.data;

// Format date
const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});

// YouTube thumbnail URL
const thumbnailUrl = `https://i.ytimg.com/vi/${videoId}/hqdefault.jpg`;
---

<article class="group">
  <a href={`/watched/${item.slug}`} class="block">
    <div class="flex flex-col sm:flex-row gap-4">
      <!-- Thumbnail -->
      <div class="sm:w-64 flex-shrink-0">
        <div class="relative aspect-video rounded-lg overflow-hidden bg-slate-200 dark:bg-slate-700">
          <img
            src={thumbnailUrl}
            alt={title}
            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
            loading="lazy"
          />
          <!-- Play icon overlay -->
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="w-12 h-12 bg-red-600 rounded-full flex items-center justify-center opacity-90 group-hover:opacity-100 group-hover:scale-110 transition-all">
              <svg class="w-5 h-5 text-white ml-1" fill="currentColor" viewBox="0 0 24 24">
                <path d="M8 5v14l11-7z"/>
              </svg>
            </div>
          </div>
          {duration && (
            <span class="absolute bottom-2 right-2 bg-black/80 text-white text-xs px-1.5 py-0.5 rounded">
              {duration}
            </span>
          )}
        </div>
      </div>

      <!-- Content -->
      <div class="flex-grow">
        <h2 class="text-lg sm:text-xl font-bold text-slate-900 dark:text-white group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors mb-1">
          {title}
        </h2>

        {channel && (
          <p class="text-sm text-slate-600 dark:text-slate-400 mb-2">
            {channel}
          </p>
        )}

        {description && (
          <p class="text-sm text-slate-600 dark:text-slate-400 mb-3 line-clamp-2">
            {description}
          </p>
        )}

        <div class="flex flex-wrap items-center gap-2 text-xs text-slate-500 dark:text-slate-400">
          <time datetime={pubDate.toISOString()}>
            {formattedDate}
          </time>
        </div>

        {tags && tags.length > 0 && (
          <div class="mt-3">
            <Tags tags={tags} size="xs" />
          </div>
        )}
      </div>
    </div>
  </a>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
