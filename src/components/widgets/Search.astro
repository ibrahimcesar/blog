---
// Pagefind Search Component
const { id = "search" } = Astro.props;
---

<div id={id} class="pagefind-search-wrapper">
  <div id="pagefind__search"></div>
</div>

<script>
  // Load Pagefind UI dynamically
  async function loadPagefind() {
    const pagefind = await import("/pagefind/pagefind.js");
    await pagefind.options({
      excerptLength: 15,
    });

    const { PagefindUI } = await import("/pagefind/pagefind-ui.js");

    new PagefindUI({
      element: "#pagefind__search",
      showSubResults: true,
      showImages: false,
      excerptLength: 30,
      resetStyles: false,
      translations: {
        placeholder: "Search posts...",
        clear_search: "Clear",
        load_more: "Load more results",
        search_label: "Search this site",
        filters_label: "Filters",
        zero_results: "No results for [SEARCH_TERM]",
        many_results: "[COUNT] results for [SEARCH_TERM]",
        one_result: "[COUNT] result for [SEARCH_TERM]",
        alt_search: "No results for [SEARCH_TERM]. Showing results for [DIFFERENT_TERM] instead",
        search_suggestion: "No results for [SEARCH_TERM]. Try one of the following searches:",
        searching: "Searching for [SEARCH_TERM]...",
      },
    });
  }

  if (document.readyState === "complete") {
    loadPagefind();
  } else {
    window.addEventListener("DOMContentLoaded", loadPagefind);
  }
</script>

<style is:global>
  .pagefind-search-wrapper {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
  }

  /* Dark mode support */
  :root {
    --pagefind-ui-scale: 1;
    --pagefind-ui-primary: #3b82f6; /* blue-500 */
    --pagefind-ui-text: #374151; /* gray-700 */
    --pagefind-ui-background: #ffffff;
    --pagefind-ui-border: #e5e7eb; /* gray-200 */
    --pagefind-ui-tag: #f3f4f6; /* gray-100 */
    --pagefind-ui-border-width: 1px;
    --pagefind-ui-border-radius: 8px;
    --pagefind-ui-image-border-radius: 8px;
    --pagefind-ui-image-box-ratio: 3 / 2;
    --pagefind-ui-font: inherit;
  }

  .dark {
    --pagefind-ui-primary: #60a5fa; /* blue-400 */
    --pagefind-ui-text: #e5e7eb; /* gray-200 */
    --pagefind-ui-background: #1f2937; /* gray-800 */
    --pagefind-ui-border: #374151; /* gray-700 */
    --pagefind-ui-tag: #374151; /* gray-700 */
  }

  /* Custom styling for better integration */
  .pagefind-ui__search-input {
    font-size: 1rem;
    padding: 0.75rem 1rem;
    border: 2px solid var(--pagefind-ui-border);
    transition: all 0.2s;
  }

  .pagefind-ui__search-input:focus {
    outline: none;
    border-color: var(--pagefind-ui-primary);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }

  .dark .pagefind-ui__search-input:focus {
    box-shadow: 0 0 0 3px rgba(96, 165, 250, 0.1);
  }

  .pagefind-ui__result {
    padding: 1rem;
    border: 1px solid var(--pagefind-ui-border);
    border-radius: var(--pagefind-ui-border-radius);
    margin-bottom: 1rem;
    transition: all 0.2s;
  }

  .pagefind-ui__result:hover {
    border-color: var(--pagefind-ui-primary);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .pagefind-ui__result-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .pagefind-ui__result-excerpt {
    color: var(--pagefind-ui-text);
    line-height: 1.6;
  }

  .pagefind-ui__button {
    background: var(--pagefind-ui-primary);
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }

  .pagefind-ui__button:hover {
    opacity: 0.9;
  }

  .pagefind-ui__message {
    text-align: center;
    padding: 2rem;
    color: var(--pagefind-ui-text);
  }
</style>

<!-- Load Pagefind UI CSS -->
<link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
