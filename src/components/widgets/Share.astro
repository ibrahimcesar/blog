---
const { post } = Astro.props;

const url = post.slug;
const title = post.title;
const description = post.description;
---

<section aria-label="share this post" class="text-center mt-4">
  <header>
    <h1 class="text-sm font-mono uppercase font-bold">Share this post</h1>
    <a
      href={`https://www.linkedin.com/shareArticle?url=https://ibrahimcesar.cloud/blog/${url}&utm_source=blog&utm_medium=web&utm_campaign=post&utm_id=s`}
      class="inline-block mr-6 social"
      rel="noopener noreferrer"
      target="_blank"
      title={`Share ${title} on LinkedIn`}
    >
        <img src="/icon-linkedin.png" style="max-height: 3rem" />
  </a>
   <a
    href={`https://twitter.com/intent/tweet?url=https://ibrahimcesar.cloud/blog/${url}&utm_source=blog&utm_medium=web&utm_campaign=post&utm_id=s&title=${description}&via=ibrahimcesar`}
    class="inline-block social"
    rel="noopener noreferrer"
    title={`Share ${title} on Twitter`}
    target="_blank"
    >
      <img src="/icon-twitter.png" style="max-height: 3rem"/>
  </a>
  </header>
</section>
