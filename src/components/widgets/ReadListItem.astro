---
import Tags from './Tags.astro';
import type { Read } from '~/utils/getReadsCollection';

interface Props {
  item: Read;
}

const { item } = Astro.props;
const { title, author, source, sourceUrl, type, pubDate, tags, description, bookCover } = item.data;

// Format date
const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});

// Type icons and labels
const typeConfig: Record<string, { icon: string; label: string }> = {
  article: { icon: 'ðŸ“„', label: 'Article' },
  paper: { icon: 'ðŸ“‘', label: 'Paper' },
  book: { icon: 'ðŸ“š', label: 'Book' },
  newsletter: { icon: 'ðŸ“¬', label: 'Newsletter' },
  thread: { icon: 'ðŸ§µ', label: 'Thread' },
};

const typeInfo = typeConfig[type] || typeConfig.article;
---

<article class="group">
  <a href={`/reads/${item.slug}`} class="block">
    <div class="flex flex-col sm:flex-row gap-4">
      <!-- Book cover or type icon -->
      <div class="sm:w-24 flex-shrink-0">
        {bookCover ? (
          <img
            src={bookCover}
            alt={title}
            class="w-24 h-32 object-cover rounded-lg shadow-md"
            loading="lazy"
          />
        ) : (
          <div class="w-24 h-32 bg-gradient-to-br from-slate-100 to-slate-200 dark:from-slate-700 dark:to-slate-800 rounded-lg flex items-center justify-center text-4xl">
            {typeInfo.icon}
          </div>
        )}
      </div>

      <!-- Content -->
      <div class="flex-grow">
        <div class="flex items-center gap-2 mb-1">
          <span class="text-xs font-medium px-2 py-0.5 rounded-full bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-300">
            {typeInfo.label}
          </span>
        </div>

        <h2 class="text-lg sm:text-xl font-bold text-slate-900 dark:text-white group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors mb-1">
          {title}
        </h2>

        {(author || source) && (
          <p class="text-sm text-slate-600 dark:text-slate-400 mb-2">
            {author && <span class="font-medium">{author}</span>}
            {author && source && <span class="mx-1">Â·</span>}
            {source && <span>{source}</span>}
          </p>
        )}

        {description && (
          <p class="text-sm text-slate-600 dark:text-slate-400 mb-3 line-clamp-2">
            {description}
          </p>
        )}

        <div class="flex flex-wrap items-center gap-2 text-xs text-slate-500 dark:text-slate-400">
          <time datetime={pubDate.toISOString()}>
            {formattedDate}
          </time>
          {sourceUrl && (
            <>
              <span>Â·</span>
              <span class="text-indigo-600 dark:text-indigo-400">Read original</span>
            </>
          )}
        </div>

        {tags && tags.length > 0 && (
          <div class="mt-3">
            <Tags tags={tags} size="xs" />
          </div>
        )}
      </div>
    </div>
  </a>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
